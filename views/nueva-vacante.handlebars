<main class="contenedor">
    <form method="POST" action="/vacantes/nueva" class="default-form">
        <h3>Informacion General</h3>

        <div class="campo">
            <label>Titulo:</label>
            <input type="text" name="titulo" placeholder="Ej: Reack Developer">
        </div>    

        <div class="campo">
            <label>Empresa:</label>
            <input type="text" name="empresa" placeholder="Ej: Empresa Contratar">
        </div> 

        <div class="campo">
            <label>Ubicacion:</label>
            <input type="text" name="ubicacion" placeholder="Ej: El Salvador o Remoto">
        </div> 

        <div class="campo">
            <label>Salario (USD):</label>
            <input type="text" name="salario" placeholder="Ej: 500 USD">
        </div> 

        <div class="campo">
            <label >Contrato:</label>
            <select name="contrato">
                <option value="" disabled selected>-- Selecciona --</option>
                <option value="Freelance">Freelance</option>
                <option value="Tiempo Completo">Tiempo Completo</option>
                <option value="Medio Tiempo">Medio Tiempo</option>
                <option value="Por Proyecto">Por Proyecto</option>
            </select>
        </div>
        <h3>Descripcion del Puesto</h3>
        <div class="campo descripcion">
            <label>Descripcion del Puesto</label>
            <input type="hidden" id="x" name="descripcion"> 
            <trix-editor input="x"></trix-editor>
        </div>
        <h3>Conocimiento</h3>
        <ul class="lista-conocimientos">
            {{#seleccionarSkills a}}
            {{/seleccionarSkills}}
        </ul>

        <div class="campo centrar-horizontal">
            <input type="hidden" value="publicar" name="skills" id="skills">
            <input type="submit" value="publicar" class="btn btn-azul">
        </div>

    </form>
</main>