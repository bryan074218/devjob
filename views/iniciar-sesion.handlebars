<main class="contenedor">
    <form action="/iniciar-sesion" method="POST" class="default-form">
        <div class="campo">
            <label>E-mail</label>
            <input type="text" name="email" placeholder="Tu Email" required>
        </div>

        <div class="campo">
            <label>Password</label>
            <input type="password" name="password" placeholder="Tu Password" required>
        </div>

        <div class="campo accioes">
            <a href="/crear-cuenta">Crear una cuenta</a>
            <a href="/restablecer-password">Olvide mi password</a>
        </div>
        <div class="campo">
            <input type="submit" value="Iniciar Sesion" class="btn btn-azul">
        </div>

    </form>
</main>